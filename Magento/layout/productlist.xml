<?xml version="1.0" encoding="UTF-8"?>
<layout version="0.1.0">
    <productlist_index_index>
        <reference name="root">
            <action method="setTemplate">
                <template>page/1column.phtml</template>
            </action>
        </reference>
        <reference name="head">
            <action method="addCss">
                <stylesheet>css/custom.css</stylesheet>
            </action>
            <action method="addJs">
                <script>productlist/reverse.js</script>
            </action>
        </reference>
        <reference name="content">
            <block type="productlist/productlist" name="productlist_any_block" template="productlist/productlist.phtml" />
        </reference>
    </productlist_index_index>
</layout>


